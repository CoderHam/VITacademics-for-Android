<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <TextView
        android:id="@+id/tvTimeLeft"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="5dp"
        android:text="5 hours from now"
        android:textColor="@color/bright_foreground_material_light" />

    <android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
        android:id="@+id/card_view_today"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="5dp">

            <TextView
                android:id="@+id/tv_course_code"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/tv_course_name"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="5dp"
                android:textColor="@color/bright_foreground_material_light" />

            <TextView
                android:id="@+id/tv_slot"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentTop="true"
                android:layout_marginLeft="3dp"
                android:layout_marginTop="5dp"
                android:textColor="@color/colorPrimary"
                android:textSize="20sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/tv_venue"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_alignParentTop="true"
                android:layout_marginRight="3dp"
                android:layout_marginTop="5dp"
                android:textColor="@color/colorPrimary"
                android:textSize="20sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/tv_course_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/tv_slot"
                android:layout_centerHorizontal="true"
                android:textColor="@color/bright_foreground_material_light"
                android:textSize="18sp"
                android:textStyle="italic" />

            <TextView
                android:id="@+id/tv_attendance"
                android:layout_width="60sp"
                android:layout_height="60sp"
                android:layout_alignTop="@+id/tv_course_code"
                android:layout_centerVertical="true"
                android:background="@drawable/circle"
                android:elegantTextHeight="@bool/abc_action_bar_embed_tabs"
                android:elevation="@dimen/cardview_default_elevation"
                android:gravity="center"
                android:text="N.A"
                android:textColor="@color/bright_foreground_material_light"
                android:textStyle="bold" />

            <ProgressBar
                android:id="@+id/process_bar_attendance"
                style="?android:attr/progressBarStyleHorizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/tv_course_code"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="5dp"
                android:layout_toRightOf="@+id/tv_attendance"
                android:elevation="@dimen/cardview_default_elevation"
                android:progress="100" />

            <TextView
                android:id="@+id/fixed_go"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignLeft="@+id/process_bar_attendance"
                android:layout_below="@+id/process_bar_attendance"
                android:layout_marginLeft="6dp"
                android:layout_marginTop="10dp"
                android:text="Go: "
                android:textColor="@color/bright_foreground_material_light" />

            <TextView
                android:id="@+id/tv_go_attend"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/process_bar_attendance"
                android:layout_marginTop="10dp"
                android:layout_toRightOf="@+id/fixed_go"
                android:text="N.A"
                android:textColor="@color/bright_foreground_material_light" />

            <TextView
                android:id="@+id/fixed_miss"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignTop="@+id/tv_go_attend"
                android:layout_below="@+id/process_bar_attendance"
                android:layout_toLeftOf="@+id/tv_miss_attend"
                android:text="Miss: "
                android:textColor="@color/bright_foreground_material_light" />

            <TextView
                android:id="@+id/tv_miss_attend"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_alignTop="@+id/tv_go_attend"
                android:layout_below="@+id/process_bar_attendance"
                android:layout_marginLeft="6dp"
                android:text="N.A"
                android:textColor="@color/bright_foreground_material_light" />

            <android.support.v4.widget.Space
                android:layout_width="20dp"
                android:layout_height="10dp"
                android:layout_below="@+id/tv_slot"
                android:layout_toEndOf="@+id/tv_course_code"
                android:layout_toRightOf="@+id/tv_attendance" />


        </RelativeLayout>

    </android.support.v7.widget.CardView>
</LinearLayout>
