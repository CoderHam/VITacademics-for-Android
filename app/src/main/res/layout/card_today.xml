<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">
    <TextView
        android:id="@+id/tvTimeLeft"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="5dp"
        android:text="5 hours from now"
        android:textColor="@color/bright_foreground_material_light"/>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/card_view_today"
    android:layout_width="match_parent"
    android:layout_height="wrap_content" >

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="5dp">
        <TextView
            android:id="@+id/tv_course_code"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/tv_course_name"
            android:layout_marginTop="5dp"
            android:text="@string/subCode"
            android:textColor="@color/bright_foreground_material_light"
            android:layout_centerHorizontal="true"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/slot"
            android:textStyle="bold"
            android:layout_marginTop="5dp"
            android:layout_marginLeft="3dp"
            android:layout_alignParentTop="true"
            android:id="@+id/tv_slot"
            android:textColor="@color/colorPrimary"
            android:textSize="20sp"
            />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/classNo"
            android:textStyle="bold"
            android:layout_alignParentTop="true"
            android:layout_marginTop="5dp"
            android:layout_marginRight="3dp"
            android:id="@+id/tv_venue"
            android:textColor="@color/colorPrimary"
            android:textSize="20sp"
            android:layout_alignParentRight="true"
            />

        <TextView
            android:id="@+id/tv_course_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/tv_slot"
            android:text="@string/subName"
            android:textStyle="italic"
            android:textColor="@color/bright_foreground_material_light"
            android:textSize="18sp"
            android:layout_centerHorizontal="true"
            />
        <TextView
            android:layout_width="60sp"
            android:layout_height="60sp"
            android:text="70%"
            android:textStyle="bold"
            android:elegantTextHeight="@bool/abc_action_bar_embed_tabs"
            android:elevation="@dimen/cardview_default_elevation"
            android:gravity="center"
            android:layout_alignTop="@+id/tv_course_code"
            android:layout_centerVertical="true"
            android:background="@drawable/circle"
            android:textColor="@color/bright_foreground_material_light"
            android:id="@+id/tv_attendance" />
        <ProgressBar
            style="?android:attr/progressBarStyleHorizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/process_bar_attendance"
            android:layout_marginTop="5dp"
            android:elevation="@dimen/cardview_default_elevation"
            android:layout_below="@+id/tv_course_code"
            android:progress="80"
            android:layout_centerHorizontal="true"
            android:layout_toRightOf="@+id/tv_attendance"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/tv_go_attend"
            android:layout_alignLeft="@+id/process_bar_attendance"
            android:textColor="@color/bright_foreground_material_light"
            android:text="Go: 80%"
            android:layout_marginTop="10dp"
            android:layout_marginLeft="6dp"
            android:layout_below="@+id/process_bar_attendance"
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/tv_no_go_attend"
            android:text="Miss: 70%"
            android:layout_alignTop="@+id/tv_go_attend"
            android:textColor="@color/bright_foreground_material_light"
            android:layout_alignParentRight="true"
            android:layout_marginLeft="6dp"
            android:layout_below="@+id/process_bar_attendance"
            />
        <android.support.v4.widget.Space
            android:layout_width="20dp"
            android:layout_height="10dp"
            android:layout_below="@+id/tv_slot"
            android:layout_toRightOf="@+id/tv_attendance"
            android:layout_toEndOf="@+id/tv_course_code" />


    </RelativeLayout>

</android.support.v7.widget.CardView>
</LinearLayout>
