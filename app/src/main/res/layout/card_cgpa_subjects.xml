<android.support.v7.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent" android:layout_height="wrap_content"
    android:id="@+id/card_view_subjects">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="5sp">
        <TextView
            android:layout_width="300dp"
            android:layout_height="wrap_content"
            android:id="@+id/tv_course_code"
            android:text="CSE101"
            android:paddingLeft="5dp"
            android:textStyle="bold"
            android:gravity="center"
            android:textSize="25sp"
            android:textAppearance="@style/TextAppearance.AppCompat.Headline"
            android:textColor="@color/colorPrimaryDark"
            />
        <TextView
            android:layout_width="300dp"
            android:layout_height="wrap_content"
            android:id="@+id/tv_course_name"
            android:paddingLeft="5dp"
            android:paddingRight="5dp"
            android:text="Computer Programming and Problem Solving"
            android:textStyle="italic"
            android:textAlignment="center"
            android:textSize="18sp"
            android:gravity="center"
            android:textAppearance="@style/TextAppearance.AppCompat.Headline"
            android:textColor="@color/colorPrimary"
            android:layout_below="@+id/tv_course_code"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true" />
        <TextView
            android:layout_width="wrap_content"
            android:id="@+id/tv_credits"
            android:layout_height="wrap_content"
            android:paddingLeft="5dp"
            android:textSize="23sp"
            android:textStyle="bold"
            android:paddingRight="5dp"
            android:text="4"
            android:textColor="@color/primary_text_default_material_light"
            android:layout_alignParentTop="true"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true" />
        <Spinner
            android:layout_width="60dp"
            android:id="@+id/course_grade"
            android:text="A"
            android:layout_height="30dp"
            android:textStyle="bold"
            android:paddingLeft="5dp"
            android:paddingRight="5dp"
            android:textSize="23sp"
            android:textColor="#ffff0100"
            android:layout_alignTop="@+id/tv_course_name"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true"
            android:entries="@array/setGrade"
            />
    </RelativeLayout>

</android.support.v7.widget.CardView>