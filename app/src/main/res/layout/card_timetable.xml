<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/card_view_timetable"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="5dp">

        <TextView
            android:id="@+id/tv_course_code"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"
            android:textColor="@color/colorPrimary"
            android:textSize="20sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/tv_attendance"
            android:layout_width="60sp"
            android:layout_height="60sp"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_alignTop="@+id/tv_course_name"
            android:background="@drawable/circle"
            android:elegantTextHeight="@bool/abc_action_bar_embed_tabs"
            android:elevation="@dimen/cardview_default_elevation"
            android:gravity="center"
            android:text="N.A"
            android:textColor="@color/bright_foreground_material_light"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/tv_course_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/tv_course_code"
            android:layout_centerHorizontal="true"
            android:layout_toRightOf="@+id/tv_attendance"
            android:paddingBottom="5dp"
            android:textColor="@color/primary_text_default_material_light"
            android:textStyle="italic" />

        <ProgressBar
            android:id="@+id/process_bar_attendance"
            style="?android:attr/progressBarStyleHorizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/tv_course_name"
            android:layout_centerHorizontal="true"
            android:layout_toRightOf="@+id/tv_attendance"
            android:elevation="@dimen/cardview_default_elevation"
            android:progress="100" />

        <TextView
            android:id="@+id/tv_slot"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/process_bar_attendance"
            android:layout_toRightOf="@+id/tv_attendance"
            android:paddingTop="5dp"
            android:textColor="@color/primary_text_default_material_light"
            android:textSize="20sp" />

        <TextView
            android:id="@+id/tv_venue"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_below="@+id/process_bar_attendance"
            android:paddingTop="5dp"
            android:textColor="@color/primary_text_default_material_light"
            android:textSize="20sp" />

        <android.widget.Space
            android:layout_width="20dp"
            android:layout_height="10sp"
            android:layout_below="@+id/tv_slot"
            android:layout_toEndOf="@+id/tv_course_code"
            android:layout_toRightOf="@+id/tv_attendance" />
    </RelativeLayout>

</android.support.v7.widget.CardView>
