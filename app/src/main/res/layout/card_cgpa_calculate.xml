<android.support.v7.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent" android:layout_height="wrap_content"
    android:id="@+id/card_view_cgpa">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="5sp"
        android:elevation="2dp">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/tv_cgpa_new"
            android:text="New CGPA : "
            android:paddingLeft="5dp"
            android:textStyle="bold"
            android:textAlignment="center"
            android:gravity="center"
            android:textSize="25sp"
            android:textAppearance="@style/TextAppearance.AppCompat.Headline"
            android:textColor="@color/colorPrimaryDark"
            android:layout_alignParentTop="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true" />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/tv_cgpa_old"
            android:paddingLeft="5dp"
            android:paddingRight="5dp"
            android:text="Old CGPA :"
            android:textStyle="italic"
            android:textAlignment="center"
            android:textSize="18sp"
            android:gravity="center"
            android:textAppearance="@style/TextAppearance.AppCompat.Headline"
            android:textColor="@color/colorPrimary"
            android:layout_below="@+id/tv_cgpa_new"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true" />
        <TextView
            android:layout_width="wrap_content"
            android:id="@+id/old_cgpa"
            android:layout_height="wrap_content"
            android:paddingLeft="5dp"
            android:textSize="25sp"
            android:textStyle="bold"
            android:paddingRight="5dp"
            android:text="8.4"
            android:textColor="@color/colorPrimaryDark"
            android:layout_alignParentTop="true"
            android:layout_toRightOf="@+id/tv_cgpa_new"
            android:layout_toEndOf="@+id/tv_cgpa_new" />

        <TextView
            android:layout_width="wrap_content"
            android:id="@+id/new_cgpa"
            android:layout_height="wrap_content"
            android:paddingLeft="5dp"
            android:textSize="18sp"
            android:textStyle="italic"
            android:paddingRight="5dp"
            android:text="8.6"
            android:textColor="@color/colorPrimary"
            android:layout_below="@+id/tv_cgpa_new"
            android:layout_toRightOf="@+id/tv_cgpa_old"
            android:layout_toEndOf="@+id/tv_cgpa_old" />

        <Button
            android:layout_width="wrap_content"
            android:layout_height="40dp"
            android:text="Calculate"
            android:id="@+id/button_calculate"
            android:textStyle="bold"
            android:textColor="#ff000000"
            android:background="#7bff0000"
            android:fontFamily="Roboto"
            android:layout_centerVertical="true"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true" />

    </RelativeLayout>

</android.support.v7.widget.CardView>