<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/card_view_contributors"
    android:layout_width="match_parent"
    android:layout_height="wrap_content" >
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#59c3fdb5"
        android:padding="5dp"
        >
        <TextView
            android:id="@+id/contributor_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/contributor_image"
            android:text="Contributor Name"
            android:textStyle="bold"
            android:textColor="#e0000000"
            android:textSize="20sp"
            android:layout_centerHorizontal="true"/>
        <TextView
            android:id="@+id/contributor_details"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/contributor_name"
            android:text="Contributor Details"
            android:textStyle="bold"
            android:textColor="#cf001755"
            android:textSize="16sp"
            android:layout_centerHorizontal="true"/>
        <!--<TextView
            android:id="@+id/contributor_more"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/contributor_details"
            android:text="More Contributor Details"
            android:textStyle="bold"
            android:textColor="#cf001755"
            android:textSize="16sp"
            android:layout_centerHorizontal="true"/>-->
       <ImageView
           android:layout_width="150dp"
           android:layout_height="150dp"
           android:id="@+id/contributor_image"
           android:layout_centerHorizontal="true"
           android:src="@drawable/ic_launcher"
           />
    </RelativeLayout>
</android.support.v7.widget.CardView>
