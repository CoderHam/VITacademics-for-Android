<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/cardToday"
    android:layout_width="match_parent"
    android:layout_height="wrap_content" >

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="5dp">
        <TextView
            android:id="@+id/tvCourseCode"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/tvCourseName"
            android:text="CSE101"
            android:textColor="@color/primary_text_default_material_light"
            android:layout_centerHorizontal="true"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="H1"
            android:layout_marginTop="5dp"
            android:layout_marginLeft="3dp"
            android:layout_alignParentTop="true"
            android:id="@+id/tvSlot"
            android:textColor="@color/colorPrimary"
            android:textSize="20sp"
            />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="SJT 404"
            android:layout_alignParentTop="true"
            android:layout_marginTop="5dp"
            android:layout_marginRight="3dp"
            android:id="@+id/tvVenue"
            android:textColor="@color/colorPrimary"
            android:textSize="20sp"
            android:layout_alignParentRight="true"
            />
        <!--<TextView
            android:layout_width="60sp"
            android:layout_height="60sp"
            android:text="75%"
            android:elegantTextHeight="@bool/abc_action_bar_embed_tabs"
            android:elevation="@dimen/cardview_default_elevation"
            android:gravity="center"
            android:layout_centerVertical="true"
            android:background="@drawable/circle"
            android:textColor="@color/bright_foreground_material_light"
            android:id="@+id/tvAttendance" />-->
        <TextView
            android:id="@+id/tvCourseName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/tvSlot"
            android:text="Computer Programming and Problem Solving"
            android:textSize="18sp"
            android:layout_centerHorizontal="true"
            android:textColor="@color/secondary_text_default_material_light"
            />
        <TextView
            android:layout_width="60sp"
            android:layout_height="60sp"
            android:text="75%"
            android:elegantTextHeight="@bool/abc_action_bar_embed_tabs"
            android:elevation="@dimen/cardview_default_elevation"
            android:gravity="center"
            android:layout_alignTop="@+id/tvCourseCode"
            android:layout_centerVertical="true"
            android:background="@drawable/circle"
            android:textColor="@color/bright_foreground_material_light"
            android:id="@+id/tvAttendance" />
        <ProgressBar
            style="?android:attr/progressBarStyleHorizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/pbAttendance"
            android:layout_marginTop="5dp"
            android:elevation="@dimen/cardview_default_elevation"
            android:layout_below="@+id/tvCourseCode"
            android:layout_centerHorizontal="true"
            android:layout_toRightOf="@+id/tvAttendance"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@id/tvGoAttend"
            android:layout_alignLeft="@+id/pbAttendance"
            android:text="Go: 60%"
            android:layout_marginTop="5dp"
            android:layout_marginLeft="6dp"
            android:layout_below="@+id/pbAttendance"
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@id/tvNoGoAttend"
            android:text="Miss: 55%"
            android:layout_alignTop="@+id/tvGoAttend"
            android:layout_marginTop="5dp"
            android:layout_alignParentRight="true"
            android:layout_marginLeft="6dp"
            android:layout_below="@+id/pbAttendance"
            />
        <Space
            android:layout_width="20px"
            android:layout_height="10sp"
            android:layout_below="@+id/tvSlot"
            android:layout_toRightOf="@+id/tvAttendance"
            android:layout_toEndOf="@+id/tvCourseCode" />


    </RelativeLayout>

</android.support.v7.widget.CardView>
