<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <com.devspark.robototextview.widget.RobotoTextView
        android:id="@+id/lbl_inf"
        android:layout_width="wrap_content"
        android:layout_marginTop="50dp"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:textSize="17sp"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:gravity="center"
        android:text="You need to sign in with Facebook to use the friends feature"
        app:typeface="roboto_bold"
        />

    <ImageButton
        android:id="@+id/btn_login"
        android:layout_width="300dp"
        android:layout_height="60dp"
        android:layout_marginTop="30dp"
        android:layout_centerHorizontal="true"
        android:layout_below="@id/lbl_inf"
        android:background="@android:color/transparent"
        android:src = "@drawable/facebook_login_pic"/>

    <com.devspark.robototextview.widget.RobotoTextView
        android:id="@+id/lbl_inf2"
        android:layout_below="@id/btn_login"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="25dp"
        android:textSize="15sp"
        android:layout_marginRight="25dp"
        android:layout_marginTop="30dp"
        android:gravity="center"
        android:textColor="@color/Gray"
        android:text="Don't worry, we won't ever post to your facebook."
        app:typeface="roboto_light"
        />

</RelativeLayout>