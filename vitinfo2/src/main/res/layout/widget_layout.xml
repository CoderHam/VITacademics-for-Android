<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/layout"
    android:layout_width="match_parent"
    android:layout_height="200dp"
    android:layout_margin="3dp"
    android:background="#80FFFFFF">

    <RelativeLayout
        android:layout_width="50dp"
        android:id="@+id/img_wid_bck"
        android:layout_height="fill_parent"
        android:clickable="true"
        android:layout_weight="1"
        android:gravity="center"
        style="@style/Widget.AppCompat.ActionButton"
        >
        <ImageButton
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:clickable="false"
            android:background="@drawable/back_w" />
    </RelativeLayout>

    <TextView
        android:id="@+id/lbl_wid_sub"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_weight="99"
        android:maxLines="1"
        android:ellipsize="marquee"
        android:marqueeRepeatLimit="marquee_forever"
        android:textColor="#000000"
        android:text="Subject is haoua oigtaoutoat"
        android:textSize="18dp"
        android:layout_alignParentTop="true"
        android:layout_marginTop="5dp"
        android:layout_marginBottom="5dp"
        android:layout_toLeftOf="@+id/img_wid_nxt"
        android:layout_toRightOf="@+id/img_wid_bck" />

    <TextView
        android:id="@+id/lbl_wid_slt"
        android:layout_weight="1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:maxLines="1"
        android:text="L45+L55+L77 "
        android:textColor="#000000"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="10dp"
        android:textSize="14dp" />
    <ProgressBar
        android:id="@+id/prg_wid_per"
        style="@style/Widget.AppCompat.ProgressBar.Horizontal"
        android:layout_width="1dp"
        android:layout_height="wrap_content"
        android:layout_weight="9"
        android:max="100"
        android:progress="99"
        android:progressDrawable="@drawable/circular_progress_blue"
        android:layout_toRightOf="@+id/img_wid_bck"
        android:layout_toLeftOf="@+id/img_wid_nxt"
        android:layout_below="@+id/lbl_wid_sub"
        android:layout_above="@+id/lbl_wid_slt"/>
    <TextView
        android:id="@+id/lbl_wid_per"
        android:layout_weight="1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="right"
        android:maxLines="1"
        android:text="50%"
        android:textColor="#000000"
        android:layout_centerVertical="true"
        android:layout_centerHorizontal="true"
        android:textSize="25dp" />

    <RelativeLayout
        android:layout_width="50dp"
        android:id="@+id/img_wid_nxt"
        android:layout_height="fill_parent"
        android:clickable="true"
        android:layout_alignParentRight="true"
        android:layout_weight="1"
        android:gravity="center"
        style="@style/Widget.AppCompat.ActionButton"
        >
        <ImageButton
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:clickable="false"
            android:background="@drawable/forward_w" />

    </RelativeLayout>

</RelativeLayout>