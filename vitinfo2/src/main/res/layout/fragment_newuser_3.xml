<?xml version="1.0" encoding="utf-8"?>

<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ProgressBar
            android:id="@+id/prg_indeterminate"
            android:layout_marginTop="20dp"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_centerHorizontal="true"
            android:indeterminate="true" />

        <com.devspark.robototextview.widget.RobotoTextView
            android:id="@+id/lbl_load_data"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:text="Loading Data"
            android:textColor="#33b5e5"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:layout_marginTop="120dp"
            app:typeface="roboto_thin"/>

        <com.devspark.robototextview.widget.RobotoTextView
            android:id="@+id/lbl_save_load"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/lbl_load_data"
            android:layout_centerHorizontal="true"
            android:text="Parsing Data"
            android:visibility="gone"
            android:textColor="#33b5e5"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:layout_marginTop="20dp"
            app:typeface="roboto_thin"/>

        <com.devspark.robototextview.widget.RobotoButton
            android:id="@+id/btn_start_using"
            android:layout_width="wrap_content"
            android:layout_marginTop="20dp"
            android:layout_centerHorizontal="true"
            android:layout_below="@id/lbl_load_data"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceMedium"
            app:typeface="roboto_bold"
            android:text="Start using VITacademics"
            android:background="@drawable/round_shape_blue"
            android:padding="10dp"
            android:enabled="false"
            />
        <ImageView
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:id="@+id/app_logo"
            android:background="@drawable/ic_launcher"
            android:visibility="invisible"
            android:layout_alignTop="@+id/prg_indeterminate"
            android:layout_centerHorizontal="true" />
    </RelativeLayout>
</ScrollView>