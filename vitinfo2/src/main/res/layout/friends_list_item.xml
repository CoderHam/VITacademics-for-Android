<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_marginTop="5dp"
    android:layout_marginLeft="5dp"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <de.hdodenhof.circleimageview.CircleImageView
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:id="@+id/img_profile"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:src="@drawable/ic_action_person"
        android:layout_alignParentLeft="true"
        android:layout_centerHorizontal="true"
        app:border_width="1dp"
        app:border_color="#FFFFFF"/>

    <com.devspark.robototextview.widget.RobotoTextView
        android:id="@+id/lbl_title"
        android:layout_width="wrap_content"
        android:ellipsize="end"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@id/img_profile"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="Saurabh Joshi"
        android:textSize="20sp"
        android:layout_marginTop="5dp"
        android:layout_marginLeft="10dp"
        app:typeface="roboto_regular"/>

    <com.devspark.robototextview.widget.RobotoTextView
        android:id="@+id/lbl_status"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Idle"
        android:textSize="14sp"
        android:textColor="@color/green"
        android:layout_toRightOf="@id/img_profile"
        android:layout_below="@id/lbl_title"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="3dp"
        app:typeface="roboto_regular"/>

    <com.devspark.robototextview.widget.RobotoTextView
        android:id="@+id/lbl_endsin"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="14sp"
        android:layout_toRightOf="@id/lbl_status"
        android:layout_alignBaseline="@id/lbl_status"
        android:layout_below="@id/lbl_title"
        android:layout_marginLeft="10dp"
        android:text="Class ends in 1 hour"
        android:layout_marginTop="3dp"
        app:typeface="roboto_regular"/>

    <com.devspark.robototextview.widget.RobotoTextView
        android:id="@+id/lbl_venue"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:ellipsize="end"
        android:singleLine="true"
        android:layout_alignParentRight="true"
        android:layout_alignBaseline="@id/lbl_title"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="SJT121"
        android:layout_marginRight="10dp"
        android:textColor="#ff0a82ff"
        app:typeface="roboto_light"
        android:layout_alignParentTop="true"
        android:textSize="20sp" />

</RelativeLayout>