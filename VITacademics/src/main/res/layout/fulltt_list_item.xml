<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="horizontal"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/card_bg_r4"
    android:padding="15dp"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <com.devspark.robototextview.widget.RobotoTextView
        android:id = "@+id/lbl_now_slot"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="F1"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:textSize="41dp"
        android:layout_marginLeft="5dp"
        android:textColor="@color/Gray"
        android:ellipsize="end"
        app:typeface="roboto_thin"
        />

    <com.devspark.robototextview.widget.RobotoTextView
        android:id="@+id/lbl_now_venue"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:ellipsize="end"
        android:singleLine="true"
        android:layout_marginRight="10dp"
        android:layout_marginTop="5dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentRight="true"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="SJT121"
        android:textColor="@color/SkyBlue"
        app:typeface="roboto_light"
        />

    <com.devspark.robototextview.widget.RobotoTextView
        android:id="@+id/lbl_now_subject"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="5dp"
        android:layout_marginTop="5dp"
        android:ellipsize="marquee"
        android:marqueeRepeatLimit="marquee_forever"
        android:minLines="2"
        android:layout_toRightOf="@id/lbl_now_slot"
        android:layout_alignParentTop="true"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="Data Structures and Algorithms"
        android:textColor="@color/Gray"
        app:typeface="roboto_light"
        android:layout_toLeftOf="@id/lbl_now_venue" />

    <com.devspark.robototextview.widget.RobotoTextView
        android:id="@+id/lbl_now_timing"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:ellipsize="end"
        android:singleLine="true"
        android:layout_marginBottom="2dp"
        android:layout_marginRight="10dp"
        android:layout_alignParentBottom="true"
        android:layout_alignParentRight="true"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:text="8:00AM - 10:00AM"
        android:textColor="@color/Gray"
        android:layout_below="@id/lbl_now_subject"
        app:typeface="roboto_light_italic"
        />

    <com.devspark.robototextview.widget.RobotoTextView
        android:id="@+id/lbl_now_att_now"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/lbl_now_subject"
        android:layout_marginLeft="10dp"
        android:layout_marginBottom="2dp"
        android:layout_alignBaseline="@id/lbl_now_timing"
        android:layout_alignParentBottom="true"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:layout_alignParentLeft="true"
        android:text="Attendance: 80%"
        android:textColor="@color/green"
        app:typeface="roboto_light_italic"
        />
</RelativeLayout>